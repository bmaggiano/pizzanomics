
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Pizza {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  toppings    Topping[]
}

model Topping {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  imageUrl    String?
  createdAt   DateTime @default(now())
  pizzas      Pizza[]
}
